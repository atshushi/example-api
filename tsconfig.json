{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2022",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "typeRoots": ["./node_modules/@types"],
    "baseUrl": "./src",
    "paths": {
      "@infra/*": ["infra/*"],
      "@core/*": ["core/*"],
      "@modules/*": ["modules/*"]
    }
  },
  "presets": ["@babel/preset-typescript"]
}
